addigy_folder_name="FortiEDR"
dmg_name="FortiEDR.dmg"

#Mount dmg  
hdiutil attach "/Library/Addigy/ansible/packages/$addigy_folder_name/$dmg_name"  -noverify -nobrowse -noautoopen

#Copy contents from dmg
mkdir "/Library/Addigy/ansible/packages/$addigy_folder_name/extract"
cp -R /Volumes/FortiEDR/* "/Library/Addigy/ansible/packages/$addigy_folder_name/extract"

#Detach dmg
sleep 3
hdiutil detach /Volumes/FortiEDR/

#Update org name in bootstrap file
sed -i -E "s|<AccountName>.*</AccountName>|<AccountName>${FortiEDR_org_id}</AccountName>|I" "/Library/Addigy/ansible/packages/$addigy_folder_name/extract/FortiEDRInstallerOSX_6.0.8.1006_Nexigen_Comm.pkg/Payload~/./Applications/FortiEDR.app/Contents/Resources/.fortiEDRBoostrap.jsn"

#Install FortiEDR
/usr/sbin/installer -pkg "/Library/Addigy/ansible/packages/$addigy_folder_name/extract/FortiEDRInstallerOSX_6.0.8.1006_Nexigen_Comm.pkg" -target /

#Cleanup
sleep 3
rm -rf "/Library/Addigy/ansible/packages/$addigy_folder_name/extract"
